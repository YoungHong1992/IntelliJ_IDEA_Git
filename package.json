{
  "name": "jetbrains-git",
  "displayName": "JetBrains Git",
  "description": "JetBrains-style Git operations for VS Code - Compare with Revision, Compare with Branch/Tag",
  "version": "0.2.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "jetbrains",
    "compare",
    "revision",
    "branch",
    "diff"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jb-git-changes",
          "title": "Changes",
          "icon": "$(git-compare)"
        }
      ]
    },
    "views": {
      "jb-git-changes": [
        {
          "id": "jbGitChangesView",
          "name": "Changes",
          "icon": "$(git-compare)",
          "contextualTitle": "Git Changes"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "jbGitChangesView",
        "contents": "No comparison active.\n\nRight-click on a file or folder and select:\n• Compare with Revision...\n• Compare with Branch or Tag..."
      }
    ],
    "submenus": [
      {
        "id": "jetbrains.git.menu",
        "label": "Git (JetBrains Style)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "jetbrains.git.menu",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "submenu": "jetbrains.git.menu",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/title/context": [
        {
          "submenu": "jetbrains.git.menu",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "jetbrains.git.menu": [
        {
          "command": "jetbrains-git.compareWithRevision",
          "group": "1_compare@1"
        },
        {
          "command": "jetbrains-git.compareWithBranch",
          "group": "1_compare@2"
        }
      ],
      "view/title": [
        {
          "command": "jetbrains-git.refreshChanges",
          "when": "view == jbGitChangesView",
          "group": "navigation@1"
        },
        {
          "command": "jetbrains-git.clearChanges",
          "when": "view == jbGitChangesView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "jetbrains-git.openFileDiff",
          "when": "view == jbGitChangesView && viewItem == changedFile",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "jetbrains-git.compareWithRevision",
        "title": "Compare with Revision...",
        "icon": "$(git-compare)"
      },
      {
        "command": "jetbrains-git.compareWithBranch",
        "title": "Compare with Branch or Tag...",
        "icon": "$(git-branch)"
      },
      {
        "command": "jetbrains-git.openFileDiff",
        "title": "Open Diff",
        "icon": "$(diff)"
      },
      {
        "command": "jetbrains-git.clearChanges",
        "title": "Clear",
        "icon": "$(clear-all)"
      },
      {
        "command": "jetbrains-git.refreshChanges",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "colors": [
      {
        "id": "jbGit.addedFile",
        "description": "Color for added files",
        "defaults": {
          "dark": "#73c991",
          "light": "#587c0c",
          "highContrast": "#73c991"
        }
      },
      {
        "id": "jbGit.modifiedFile",
        "description": "Color for modified files",
        "defaults": {
          "dark": "#e2c08d",
          "light": "#895503",
          "highContrast": "#e2c08d"
        }
      },
      {
        "id": "jbGit.deletedFile",
        "description": "Color for deleted files",
        "defaults": {
          "dark": "#f14c4c",
          "light": "#ad0707",
          "highContrast": "#f14c4c"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
